{
    "env": {
        "es2020": true
    },
    "ignorePatterns": ["static/*", "generated/*"],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module",
        "project": 
            "./tsconfig.json"
        
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": [
            2,
            "never"
        ],
        "quotes": [
            "error",
            "single"
        ]

    }
}